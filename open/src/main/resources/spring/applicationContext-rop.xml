<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:rop="http://www.rop.com/schema/rop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
       http://www.rop.com/schema/rop http://www.rop.com/schema/rop/rop-1.0.xsd">

    <!-- 启动Rop框架 -->
    <rop:annotation-driven
            id="router"
            session-manager="defaultSessionManager"
            app-secret-manager="appSecretManager"
            service-access-controller="serviceAccessController"
            formatting-conversion-service="conversionService"
            ext-error-base-names="i18n/rop/error"
            service-timeout-seconds="30"
            thread-ferry-class="com.varela.open.impl.DumbThreadFerry"
            invoke-times-controller="invokeTimesController"
            upload-file-max-size="10240"
            upload-file-types="png,gif,jpg,jepg,txt,doc,docx,ppt,pptx"
            core-pool-size="200"
            max-pool-size="500"
            queue-capacity="50"
            keep-alive-seconds="300"
            sign-enable="true"/>

    <bean id="defaultSessionManager" class="com.varela.open.session.DefaultSessionManager"/>
    <bean id="invokeTimesController" class="com.varela.open.security.DefaultInvokeTimesController"/>
    <bean id="appSecretManager" class="com.varela.open.security.DefaultAppSecretManager"/>
    <bean id="serviceAccessController" class="com.varela.open.impl.DefaultServiceAccessController"/>

    <!--设置自定义的类型转换服务，注册自定义的类型转换器-->
    <bean id="conversionService" class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
        <property name="converters">
            <set>
                <bean class="com.varela.open.converter.DateConverter"/>
            </set>
        </property>
    </bean>

    <!--注册拦截器，可配置多个-->
    <rop:interceptors>
        <bean class="com.varela.open.interceptor.DefaultInterceptor"/>
    </rop:interceptors>

    <!--注册监听器，可配置多具-->
    <rop:listeners>
        <!-- <bean class="SamplePostInitializeEventListener"/>
         <bean class="SamplePreDoServiceEventListener"/>-->
        <bean class="com.varela.open.listener.LoggerDoServiceEventListener"/>
    </rop:listeners>

    <!--自定义method,appKey等这些系统级参数的参数名-->
    <rop:sysparams format-param-name="messageFormat"/>


</beans>