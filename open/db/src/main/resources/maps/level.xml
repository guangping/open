<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="level">


    <resultMap id="resultMap-Level" type="Level">
        <result property="createTime" column="create_time"/>
        <result property="dayCallCount" column="day_call_count"/>
    </resultMap>

    <select id="queryList" parameterType="Level" resultMap="resultMap-Level">
        <![CDATA[ select * from sd_open_level ]]>
        <where>
            <if test=" id!=null and id!='' ">
                and id=#{id}
            </if>
        </where>
    </select>
    
    <insert id="save" parameterType="Level" keyProperty="id">
        <![CDATA[
        insert into sd_open_level(name,day_call_count)
        values(#{name},#{dayCallCount})
        ]]>
    </insert>


</mapper>
